@model Projects.Data.Project
@{

}
@using (Html.BeginForm("Create", "AddProject", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">File</label>
        <input name="fileObject" type="file" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GithubLink" class="control-label">GithubLink</label>
        <input asp-for="GithubLink" class="form-control" />
        <span asp-validation-for="GithubLink" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjectCategoryId" class="control-label">Project Category</label>
        <select asp-for="ProjectCategoryId" class="form-control" asp-items="@ViewBag.Categories">
        </select>
        <span asp-validation-for="ProjectCategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Images</label>
        <input type="file" name="Images" multiple accept=".jpg,.png" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" asp-action="Create" class="btn btn-primary" />
    </div>
}