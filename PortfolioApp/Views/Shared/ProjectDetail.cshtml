@model Projects.Data.Project
@{

}

<div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content bg-light text-dark">
        <div class="modal-header">
            <h5 class="modal-title">@Model.Title</h5>
            <button type="button" id="btn-close" class="btn-close bg-dark" data-bs-dismiss="modal" aria-label="Закрыть"></button>
        </div>
        <div class="modal-body">
            <p>@Model.Description</p>
            <div class="row">
                @if (Model.Images != null) {
                    @foreach (var Image in Model.Images)
                    {
                        <div class="col-md-4">
                            <div class="project-image" style="background-image: url('@Image.FileUrl')"></div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>